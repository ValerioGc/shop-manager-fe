{
    "name": "shop-front",
    "version": "1.0.0",
    "description": "Shop Frontend Website",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite --mode development",
        "preview": "vite preview",
        "test:unit": "vitest",
        "type-check": "vue-tsc --build",
        "lint": "eslint . --fix",
        "format": "prettier --write src/",
        "build-ts": "tsc",
        "build:only": "vite build",
        "build-scripts": "tsc -p tsconfig.scripts.json",
        "build:test": "run-s build-ts build-scripts build-compiled:test",
        "build:prod": "run-s build-ts build-scripts build-compiled:prod",
        "build-compiled:prod": "node ./scripts/compile/build.mjs production",
        "build-compiled:test": "node ./scripts/compile/build.mjs test",
        "deploy:dev": "run-s build-scripts && node ./scripts/compile/deploy.mjs development",
        "deploy:prod": "run-s build-scripts && node ./scripts/compile/deploy.mjs prod",
        "deploy:test": "run-s build-scripts && node ./scripts/compile/deploy.mjs test",
        "docker:win": "run-s ./.docker/scripts/start_docker.bat",
        "docker:linux": "run-s ./.docker/scripts/start_docker.sh",
        "docker:deploy": "run-s build-scripts && node ./scripts/compile/frontend_deploy.mjs development",
        "generate-sitemap:prod": "run-s build-scripts && node ./scripts/compile/generate-sitemap-and-robots.mjs production",
        "generate-sitemap:test": "run-s build-scripts && node ./scripts/compile/generate-sitemap-and-robots.mjs test"
    },
    "dependencies": {
        "@vueuse/head": "^2.0.0",
        "axios": "^1.8.3",
        "pinia": "^3.0.1",
        "vue": "^3.5.13",
        "vue-router": "^4.5.0",
        "vue3-carousel": "^0.15.0"
    },
    "devDependencies": {
        "dotenv": "^16.4.7",
        "@fullhuman/postcss-purgecss": "^6.0.0",
        "@tsconfig/node22": "^22.0.0",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.13.4",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vitejs/plugin-vue-jsx": "^4.1.1",
        "@vitest/eslint-plugin": "1.1.31",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/eslint-config-typescript": "^14.4.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.7.0",
        "terser": "^5.39.0",
        "autoprefixer": "^10.4.19",
        "cssnano": "^7.0.6",
        "eslint": "^9.20.1",
        "eslint-plugin-vue": "^9.32.0",
        "jiti": "^2.4.2",
        "jsdom": "^26.0.0",
        "npm-run-all2": "^7.0.2",
        "postcss": "^8.5.3",
        "postcss-combine-duplicated-selectors": "^10.0.3",
        "prettier": "^3.5.1",
        "sass": "^1.85.1",
        "sharp": "^0.33.5",
        "svgo": "^3.3.2",
        "ts-node": "^10.9.2",
        "typescript": "~5.7.3",
        "unplugin-inject-preload": "^3.0.0",
        "vite": "^6.2.5",
        "vite-plugin-compression2": "^1.3.3",
        "vite-plugin-html": "^3.2.2",
        "vite-plugin-image-optimizer": "^1.1.8",
        "vite-plugin-vue-devtools": "^7.7.2",
        "vitest": "^3.1.1",
        "vue-tsc": "^2.2.8"
    }
}